{
  "name": "motk-system",
  "version": "1.0.0",
  "description": "Motion Toolkit - Production management system for animation and video workflows",
  "main": "dist/api/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:simple": "concurrently \"npm run dev:api:simple\" \"npm run dev:frontend\"",
    "dev:api": "nodemon --exec ts-node api/server-simple.ts",
    "dev:api:simple": "nodemon --exec ts-node api/server-simple.ts",
    "dev:api:full": "nodemon --exec ts-node api/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "tsc -p tsconfig.api.json",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/api/server.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "node scripts/run-integration-tests.js",
    "test:e2e": "node scripts/run-integration-tests.js e2e-workflows",
    "test:performance": "node scripts/run-integration-tests.js performance-benchmarks",
    "test:concurrent": "node scripts/run-integration-tests.js concurrent-users",
    "test:frontend": "cd frontend && npm run test",
    "test:frontend:watch": "cd frontend && npm run test:watch",
    "test:all": "npm run test && npm run test:integration",
    "deploy:vercel": "node scripts/deploy.js vercel staging",
    "deploy:vercel:prod": "node scripts/deploy.js vercel production",
    "deploy:railway": "node scripts/deploy.js railway production",
    "deploy:render": "node scripts/deploy.js render production",
    "deploy:heroku": "node scripts/deploy.js heroku production",
    "health:check": "curl -f http://localhost:3001/api/health || exit 1"
  },
  "keywords": [
    "animation",
    "production",
    "project-management",
    "google-sheets"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "google-auth-library": "^10.1.0",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.10",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.0",
    "@types/supertest": "^2.0.15",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
